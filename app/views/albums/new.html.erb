<h1>新增相簿</h1>

<%= form_with(model: @album, data: { turbo: false }) do |f| %>
<section class="flex flex-col gap-2">
  <div>
    <%= f.label :name, '名稱' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, '描述' %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :password, '密碼' %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :online, '上線' %>
    <%= f.check_box :online %>
  </div>
</section>
<%= f.submit class: 'action-btn mt-6' %>
<% end %>
